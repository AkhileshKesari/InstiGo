            android:theme="@style/AppTheme.NoActionBar.TitleBar"
            />


        <activity android:name=".Maintenance.ComplainRegister"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Maintenance.MaintenanceActivity" />
        </activity>

        <activity android:name=".Maintenance.ComplainStatus"
        >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Maintenance.MaintenanceActivity" />
        </activity>
        <activity android:name=".Maintenance.StatusDetails"
            android:theme="@style/AppTheme">
